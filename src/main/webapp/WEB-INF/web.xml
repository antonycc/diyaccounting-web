<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    
   <display-name>DIY Accounting GB</display-name>
   <description>DIY Accounting's frontend for GB products</description>

	<!-- JDBC data source -->
	<!--resource-ref>
		<description>DIY Accounting data source</description>
		<res-ref-name>jdbc/diycrm</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref-->

   <!-- Spring dispatcher -->
   <servlet>
      <servlet-name>appXXServlet</servlet-name>
      <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
      <init-param>
         <param-name>contextConfigLocation</param-name>
         <param-value>classpath:spring-context.xml</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <!--  Process all with the Spring dispatcher -->
   <servlet-mapping>
      <servlet-name>appXXServlet</servlet-name>
      <url-pattern>*.do</url-pattern> <!-- .do is friendly URL which redirects to an product, feature or article -->
      <url-pattern>/sitemap.xml</url-pattern>
      <url-pattern>/content/*</url-pattern>
      <url-pattern>/gb-web/content/*</url-pattern>
   </servlet-mapping>

   <error-page>
      <exception-type>uk.co.polycode.mdcms.cms.service.ContentException</exception-type>
      <location>/content/errors/404</location>
   </error-page>
   <!--error-page>
      <exception-type>java.lang.Exception</exception-type>
      <location>/api/errors/exception</location>
   </error-page-->
   <error-page>
      <error-code>500</error-code>
      <location>/content/errors/500</location>
   </error-page>
   <error-page>
      <error-code>404</error-code>
      <location>/src/main/webapp/notfound.html</location>
   </error-page>
   <error-page>
      <location>/src/main/webapp/error.html</location>
   </error-page>

   <welcome-file-list>
      <welcome-file>/home.html</welcome-file>
   </welcome-file-list>
 
</web-app>
